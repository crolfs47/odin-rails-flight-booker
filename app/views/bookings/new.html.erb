<h1> Booking </h1>

<div>
<%= form_with model: @booking do |form| %>
  <h3>Flight Details</h3>
  <div>
    <%= form.hidden_field :flight_id, value: @flight.id %>
    <%= "Depart: #{@flight.departure_airport.code}" %><br>
    <%= "Arrive: #{@flight.arrival_airport.code}" %><br>
    <%= "Date: #{@flight.depart_date.strftime('%B %d, %Y')}" %><br>
    <%= "Time: #{@flight.depart_time.strftime('%-I:%M %p')}" %>
  </div><br>
  Passengers:
  <div>
    <%= form.fields_for :passengers do |passenger_form| %>
      <div>
        <%= passenger_form.label :first_name, "First Name" %>
        <%= passenger_form.text_field :first_name %>
        <%= passenger_form.label :last_name, "Last Name" %>
        <%= passenger_form.text_field :last_name %>
        <%= passenger_form.label :email, "Email" %>
        <%= passenger_form.text_field :email %>
      </div>
    <%end%><br>
    <%= form.submit "Book Flight" %>
  </div>
<%end%>
</div>


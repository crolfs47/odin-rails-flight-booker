<h1> Booking </h1>
<div>
  <%= form_with model: @booking do |form| %>
    <div>
      <%= form.hidden_field :flight_id, value: params[:flight_id] %>
      <%= render 'flight_details' %>
    </div>
    <br>
    Passengers:
    <div>
      <%= form.fields_for :passengers do |passenger_form| %>
        <div>
          <%= passenger_form.label :first_name, "First Name" %>
          <%= passenger_form.text_field :first_name, required: true %>
          <%= passenger_form.label :last_name, "Last Name" %>
          <%= passenger_form.text_field :last_name, required: true %>
          <%= passenger_form.label :email, "Email" %>
          <%= passenger_form.text_field :email, required: true %>
        </div>
      <%end%><br>
      <%= form.submit "Book Flight" %>
    </div>
  <%end%>
</div>

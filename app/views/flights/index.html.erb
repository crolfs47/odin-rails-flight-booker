<h1>Flights Index</h1>

<%= form_with url: flights_path, method: :get do |form| %>
  <div>
    <%= form.label :departure_code, "Depart" %>
    <%= form.select(:departure_code, @airport_options) %>
  </div>
  <div>
    <%= form.label :arrival_code, "Arrive" %>
    <%= form.select(:arrival_code, @airport_options) %>
  </div>
  <div>
    <%= form.label :num_passengers, "Passengers" %>
    <%= form.select(:num_passengers, [1,2,3,4]) %>
  </div>
  <div>
    <%= form.label :depart_date, "Date" %>
    <%= form.select(:depart_date, @flight_dates) %>
  </div>
  <%= form.submit "Search" %>
<% end %>

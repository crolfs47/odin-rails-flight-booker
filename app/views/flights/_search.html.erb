<%= form_with url: flights_path, method: :get do |form| %>
  <div>
    <%= form.label :departure_airport_id, "Depart" %>
    <%= form.select(:departure_airport_id, @airport_options, selected: params[:departure_airport_id]) %>
  </div>
  <div>
    <%= form.label :arrival_airport_id, "Arrive" %>
    <%= form.select(:arrival_airport_id, @airport_options, selected: params[:arrival_airport_id]) %>
  </div>
  <div>
    <%= form.label :num_passengers, "Passengers" %>
    <%= form.select(:num_passengers, [1,2,3,4], selected: params[:num_passengers]) %>
  </div>
  <div>
    <%= form.label :depart_date, "Date" %>
    <%= form.date_select :depart_date, start_year: 2023, use_short_month: true, order: [:month, :day, :year], selected: @selected_date %>
  </div>
  <%= form.submit "Search" %>
<% end %>